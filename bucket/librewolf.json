{
    "##": "ltguillaume/schep",
    "version": "137.0.1-1",
    "description": "A fork of Firefox, focused on privacy, security and freedom. This variant does not use the portable launcher and makes sure the Scoop profile is used by default.",
    "homepage": "https://librewolf.net/",
    "license": "MPL-2.0",
    "notes": "After installation, the profile manager will be run to choose the right default profile.",
    "architecture": {
        "64bit": {
            "url": "https://gitlab.com/api/v4/projects/44042130/packages/generic/librewolf/137.0.1-1/librewolf-137.0.1-1-windows-x86_64-portable.zip",
            "hash": "d367c5117f15f960252e5ee53043716384bb4d68d1b92dec65ecca00d0f97d6e"
        },
        "32bit": {
            "url": "https://gitlab.com/api/v4/projects/44042130/packages/generic/librewolf/137.0.1-1/librewolf-137.0.1-1-windows-i686-portable.zip",
            "hash": "17a732732648a05acac238cdfc159373dd9ccbeb1999c7e0c8073c05bd600c08"
        }
    },
    "extract_dir": "librewolf-137.0.1-1\\LibreWolf",
    "post_install": [
        "$Addition = \"$persist_dir\\addition\"",
        "if (Test-Path $Addition) {",
        "  info 'Copying additional items...'",
        "  Copy-Item -Path $Addition\\* -Destination $dir -Force -Recurse -ErrorAction SilentlyContinue",
        "}",
        "if (!(Test-Path \"$persist_dir\\profile\\times.json\")) {",
        "    librewolf.exe -CreateProfile \"Scoop $persist_dir\\profile\"",
        "}",
        "Start-Process -WorkingDirectory $dir -FilePath librewolf.exe -ArgumentList '-P'"
    ],
    "bin": [
        [
            "librewolf.exe",
            "librewolf"
        ]
    ],
    "shortcuts": [
        [
            "librewolf.exe",
            "LibreWolf"
        ]
    ],
    "persist": [
        "distribution",
        "profile"
    ],
    "checkver": {
        "url": "https://gitlab.com/api/v4/projects/44042130/releases/permalink/latest",
        "jsonpath": "$.tag_name"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://gitlab.com/api/v4/projects/44042130/packages/generic/librewolf/$version/librewolf-$version-windows-x86_64-portable.zip"
            },
            "32bit": {
                "url": "https://gitlab.com/api/v4/projects/44042130/packages/generic/librewolf/$version/librewolf-$version-windows-i686-portable.zip"
            }
        },
        "hash": {
            "url": "$url.sha256sum"
        },
        "extract_dir": "librewolf-$version\\LibreWolf"
    }
}
