{
    "version": "129.0-1",
    "description": "A fork of Firefox, focused on privacy, security and freedom. This variant does not use the portable launcher and makes sure the Scoop profile is used by default.",
    "homepage": "https://librewolf.net/",
    "license": "MPL-2.0",
    "notes": "After installation, the profile manager will be run to choose the right default profile.",
    "architecture": {
        "64bit": {
            "url": "https://gitlab.com/api/v4/projects/44042130/packages/generic/librewolf/129.0-1/librewolf-129.0-1-windows-x86_64-portable.zip",
            "hash": "3582ccf52e0ce8954f81d68fdcd1d9bf4274332d7c65e413e3d8bc5eb0c5602a"
        },
        "32bit": {
            "url": "https://gitlab.com/api/v4/projects/44042130/packages/generic/librewolf/129.0-1/librewolf-129.0-1-windows-i686-portable.zip",
            "hash": "c8d7f2bba241612ae33555e228064d020e9371b464a7b3df313b1990bfa5cb45"
        }
    },
    "extract_dir": "librewolf-129.0-1\\LibreWolf",
    "post_install": [
        "$Addition = \"$persist_dir\\addition\"",
        "if (Test-Path $Addition) {",
        "  info 'Copying additional items...'",
        "  Copy-Item -Path $Addition\\* -Destination $dir -Force -Recurse -ErrorAction SilentlyContinue",
        "}",
        "librewolf -CreateProfile \"Scoop $persist_dir\\profile\"",
        "start -NoNewWindow librewolf -ArgumentList '-P'"
    ],
    "bin": [
        [
            "librewolf.exe",
            "librewolf"
        ]
    ],
    "shortcuts": [
        [
            "librewolf.exe",
            "LibreWolf"
        ]
    ],
    "persist": [
        "distribution",
        "profile"
    ],
    "checkver": {
        "url": "https://gitlab.com/api/v4/projects/44042130/releases/permalink/latest",
        "jsonpath": "$.tag_name"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://gitlab.com/api/v4/projects/44042130/packages/generic/librewolf/$version/librewolf-$version-windows-x86_64-portable.zip"
            },
            "32bit": {
                "url": "https://gitlab.com/api/v4/projects/44042130/packages/generic/librewolf/$version/librewolf-$version-windows-i686-portable.zip"
            }
        },
        "hash": {
            "url": "$url.sha256sum"
        },
        "extract_dir": "librewolf-$version\\LibreWolf"
    }
}
