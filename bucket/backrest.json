{
    "version": "1.11.2",
    "description": "Web UI and orchestrator for restic backup. Portable version with Start Menu shortcut to Backrest Tray.",
    "homepage": "https://github.com/garethgeorge/backrest",
    "license": "GPL-3.0-only",
    "architecture": {
        "64bit": {
            "url": "https://github.com/garethgeorge/backrest/releases/download/v1.11.2/backrest_Windows_x86_64.zip",
            "hash": "f5efdeb1d8e578db4a8f1fe6502121dd985c9a43ad6c6dec464c7565b741febc"
        },
        "arm64": {
            "url": "https://github.com/garethgeorge/backrest/releases/download/v1.11.2/backrest_Windows_arm64.zip",
            "hash": "2d04bcb3da439ec763ec95c451f79473378399a3b7a48c6b80c2e6308869bc72"
        }
    },
    "bin": "backrest.exe",
    "shortcuts": [
        [
            "backrest.exe",
            "Backrest"
        ]
    ],
    "post_install": [
        "if (-not (Test-Path \"$Env:AppData\\backrest\\*\")) {",
        "    Remove-Item \"$Env:AppData\\backrest\" 2>$null",
        "    if (-not (Test-Path \"$persist_dir\")) {",
        "        New-Item -ItemType \"directory\" -Path \"$persist_dir\" >$null",
        "    }",
        "    New-DirectoryJunction \"$Env:AppData\\backrest\" \"$persist_dir\" >$null",
        "}"
    ],
    "pre_uninstall": [
        "$backrest_data = Get-Item \"$Env:AppData\\backrest\"",
        "if (\"$($backrest_data.Target)\" -eq \"$persist_dir\") { $backrest_data.Delete() }"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/garethgeorge/backrest/releases/download/v$version/backrest_Windows_x86_64.zip"
            },
            "arm64": {
                "url": "https://github.com/garethgeorge/backrest/releases/download/v$version/backrest_Windows_arm64.zip"
            }
        },
        "hash": {
            "url": "$baseurl/backrest_$version_checksums.txt",
            "regex": "$sha256\\s+$basename"
        }
    }
}
